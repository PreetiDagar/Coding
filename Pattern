//1234554321
//1234**4321
//123****321
//12******21
//1********1
#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
    int i=1;
    while(i<=n){
        int start=1;
        int j=1;
        while(j<=n-i+1){
            cout<<start;
            start++;
            j++;
        }
        int star1=i-1;
        while(star1){
            cout<<"*";
            star1--;
        }
        int star2=i-1;
        while(star2){
            cout<<"*";
            star2--;
        }
        int last=n-i+1;
        while(last){
            cout<<last;
            last--;
        }
   
    cout<<endl;
    i++;
}}
