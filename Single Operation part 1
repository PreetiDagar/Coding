#include <bits/stdc++.h>
#define l1 long long;
using namespace std;
void ans()
{
    int n;
    cin>>n;
    string s;
    cin>>s;
    int count=0;
    for(int i=0;i<n;i++)
    {
        if(s[i]=='1')
        {
            count++;
        }
        else{
            break;
        }
        
    }
    cout<<count<<endl;
    
}
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        ans();
    }
    return 0;
}
